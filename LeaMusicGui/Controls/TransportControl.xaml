<UserControl
    x:Class="LeaMusicGui.Controls.TransportControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:LeaMusicGui.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:LeaMusicGui.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="250"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <StackPanel>
        <Grid HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,30,0"
                    HorizontalAlignment="Center"
                    FontSize="30"
                    Foreground="WhiteSmoke"
                    Text="{Binding CurrentPlayTime, StringFormat='{}{0:0.00} Sec'}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="30"
                    Foreground="WhiteSmoke"
                    Text="{Binding ProjectBpm, StringFormat=' {0} BPM'}" />
            </StackPanel>
        </Grid>
        <StackPanel
            Grid.Row="0"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal">


            <StackPanel Orientation="Horizontal">
                <Button
                    Margin="0,0,50,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Command="{Binding Path=PlayCommand}"
                    Content="Play"
                    Style="{StaticResource ButtonSuccess}" />
                <Button
                    Margin="0,0,50,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Command="{Binding Path=PauseCommand}"
                    Content="Pause"
                    Style="{StaticResource ButtonDanger}" />
                <Button
                    Margin="0,0,50,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Command="{Binding Path=JumpToLoopStartCommand}"
                    Content="LoopStart"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Margin="0,0,50,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Command="{Binding Path=FitLoopToViewCommand}"
                    Content="Fit Loop" />
                <TextBox
                    Width="40"
                    VerticalAlignment="Top"
                    Text="{Binding JumpToPositionInSec}" />
                <Button
                    Width="50"
                    Margin="0,0,50,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Command="{Binding Path=JumpToSecCommand}"
                    Content="Jump" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="{Binding ElementName=HeightMultiSlider, Path=Value, StringFormat={}{0:0.00}}" />
                <Slider
                    x:Name="HeightMultiSlider"
                    Width="120"
                    Margin="100,0,0,0"
                    HorizontalAlignment="Left"
                    Minimum="1"
                    Value="{Binding HeightScaleFactor, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="Height Multiplier" />
            </StackPanel>
            <!--  Zoom Slider  -->

            <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="{Binding Zoom, Mode=TwoWay, StringFormat={}{0:0.00}}" />
                <Slider
                    Width="120"
                    HorizontalAlignment="Left"
                    LargeChange="0.1"
                    Maximum="60"
                    Minimum="1"
                    TickFrequency="0.1"
                    Value="{Binding SliderZoom}">

                    <i:Interaction.Behaviors>
                        <behaviors:SliderDragCompletedBehavior Command="{Binding ResetZoomParameterCommand}" />
                    </i:Interaction.Behaviors>

                </Slider>
                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="Zoom" />
            </StackPanel>
            <StackPanel Grid.Row="5" HorizontalAlignment="Center">
                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="{Binding Speed, StringFormat={}{0:0.00}}" />
                <Slider
                    Width="120"
                    HorizontalAlignment="Left"
                    Maximum="1"
                    SmallChange="1"
                    TickFrequency="0.1"
                    Value="{Binding Speed}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="Speed" />
            </StackPanel>
            <StackPanel Grid.Row="5" HorizontalAlignment="Center">
                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="{Binding Pitch}" />
                <Slider
                    Width="120"
                    HorizontalAlignment="Left"
                    Maximum="8"
                    Minimum="-8"
                    SmallChange="1"
                    Value="{Binding Pitch}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="Pitch" />
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center">
            <ProgressBar
                Width="600"
                Height="18"
                Margin="0,20,0,0"
                Style="{StaticResource ProgressBarInfo}"
                Value="{Binding Path=ProgressInPercentage}" />
        </StackPanel>
    </StackPanel>
</UserControl>